<h4 class="mt-5 mb-5">商品詳細</h4>
<div class="row">
  <%= image_tag @item.get_image(300, 200), class: "col-4" %>
  <table class="col-5 ml-5">
    <thead></thead>
    <tbody>
      <tr>
        <th>商品名</th>
        <th><%= @item.item_name %></th>
      </tr>
      <tr>
        <th>商品説名</th>
        <th><%= @item.item_body %></th>
      </tr>
      <tr>
        <th>ジャンル</th>
        <th><%= @item.genre.genre_name %></th>
      </tr>
      <tr>
        <th>
          税込価格<br>
          (税抜価格)
        </th>
        <th>
          <%= number_with_delimiter @item.taxed_price %>
          （<%= number_with_delimiter @item.none_taxed_price %>）円
        </th>
      </tr>
      <tr>
        <th>販売ステータス</th>
        <th><%= render "sale_status", item: @item %></th>
      </tr>
      <tr>
      <th></th>
      <th><%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-lg btn-success" %></th>
      </tr>
    </tbody>
  </table>

</div>

