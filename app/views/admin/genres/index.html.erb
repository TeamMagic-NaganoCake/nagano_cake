<div class="row mt-3">
  <div class="col-12 mx-auto">
    <%= render "layouts/errors", obj: @genre %>
    <div class="row mb-3">
      <h4 class="mb-0">ジャンル一覧・追加</h4>
    </div>
    <%= form_with model: @genre, url: admin_genres_path, class: "row mb-3" do |f| %>
      <%= f.label :genre_name, "ジャンル名", class: "field small font-weight-bold col-1 mb-0 mr-5 d-flex align-items-center" %>
      <%= f.text_field :genre_name, placeholder: "ジャンル名", class: "col-2 ml-5 mr-5" %>
      <%= f.submit "  新規登録  ", class: "btn btn-success btn-md" %>
    <% end %>
    <div class="row pl-0">
      <table class="table table-hover col-4">
        <thead>
          <tr class="table-active">
            <th class="pl-5">ジャンル</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.genre_name %></td>
              <td class="text-right"><%= link_to "　編集する　", edit_admin_genre_path(genre), class: "btn btn-success btn-sm py-2 mr-3" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>