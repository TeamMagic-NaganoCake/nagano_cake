<%= render "layouts/errors", obj: @genre %>
<h4 class="mt-5 mb-5">ジャンル一覧・追加</h4>
<%= form_with model: @genre, url: admin_genres_path, class: "mb-5" do |f| %>
    <%= f.label :genre_name, "ジャンル名", class: "small font-weight-bold mr-5" %>
    <%= f.text_field :genre_name, placeholder: "ジャンル名", class: "mr-5" %>
    <%= f.submit "新規登録", class: "btn btn-success" %>
<% end %>
<div class="col-5 pl-0">
    <table class="table table-hover">
        <thead>
            <tr class="table-secondary">
                <th>ジャンル</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <% @genres.each do |genre| %>
                <tr>
                    <td><%= genre.genre_name %></td>
                    <td class="text-right"><%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-success btn-sm" %></td>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>