<%= render "layouts/errors", obj: @genre %>
<h4 class="my-3">ジャンル一覧・追加</h4>
<%= form_with model: @genre, url: admin_genres_path, class: "mb-3" do |f| %>
    <%= f.label :genre_name, "ジャンル名", class: "small font-weight-bold mr-3" %>
    <%= f.text_field :genre_name, placeholder: "ジャンル名", class: "col-3 mr-3" %>
    <%= f.submit "  新規登録  ", class: "btn btn-success btn-md" %>
<% end %>
<div class="col-4 pl-0">
    <table class="table table-hover">
        <thead>
            <tr class="table-active">
                <th>ジャンル</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <% @genres.each do |genre| %>
                <tr>
                    <td><%= genre.genre_name %></td>
                    <td class="text-right"><%= link_to "　編集する　", edit_admin_genre_path(genre), class: "btn btn-success btn-sm" %></td>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>