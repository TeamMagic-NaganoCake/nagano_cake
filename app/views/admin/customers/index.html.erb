<div class="row mt-3">
  <div class="col-lg-12 mx-auto">
    <h4 class="mb-3">会員一覧</h4>
    <table class="table table-bordered">
      <thead class="table-active">
        <tr>
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @customers.each do |customer| %>
          <tr>
            <td><%= customer.id %></td>
            <td>
              <%= link_to admin_customer_path(customer), class: "text-dark border-bottom border-dark text-decoration-none" do %>
                <%= customer.last_name %><%= customer.first_name %>
              <% end %>
            </td>
            <td><%= customer.email %></td>
            <td><%= render "admin/customers/customer_status", customer: customer %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<div class="d-flex justify-content-center">
  <%= paginate @customers %>
</div>