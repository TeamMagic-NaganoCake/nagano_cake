<div class="row">
  <h4>注文履歴詳細</h4>
</div>
<table class="table table-borderless mb-3">
  <tr>
    <th class="col-2">購入者</th>
    <td><%= @order.customer.last_name + @order.customer.first_name %></td>
  </tr>
  <tr>
    <th>注文日</th>
    <td><%= @order.created_at.strftime("%Y/%m/%d") %></td>
  </tr>
  <tr>
    <th>配送先</th>
    <td>
      〒<%= @order.order_postcode%> <%=@order.order_address %><br>
      <%= @order.order_address_name %>
    </td>
  </tr>
  <tr>
    <th>支払方法</th>
    <td><%= @order.payment_i18n %></td>
  </tr>
  <tr>
    <th>注文ステータス</th>
    <td>
      <%= form_with model: @order, url: admin_order_path(@order), method: :patch do |f| %>
        <%= f.select :order_status, Order.order_statuses.keys.map {|k| [I18n.t("enums.order.order_status.#{k}"), k]} %>
        <%= f.submit "更新", class: "btn btn-sm btn-success ml-3" %>
      <% end %>
    </td>
  </tr>
</table>
<div class="row">
  <table class="table col-8">
    <thead class="table-active">
      <tr>
        <th>商品名</th>
        <th>単価(税込)</th>
        <th>数量</th>
        <th>小計</th>
        <th>製作ステータス</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @order_items.each do |order_item| %>
        <tr>
          <td><%= order_item.item.item_name %></td>
          <td><%= order_item.nochange_taxed_price %></td>
          <td><%= order_item.amount %></td>
          <td><%= order_item.nochange_taxed_price * order_item.amount %></td>
          <%= form_with model: order_item, url: admin_order_item_path(order_item), method: :patch do |f| %>
            <td>
              <%= f.select :manufacture_status, OrderItem.manufacture_statuses.keys.map {|k| [I18n.t("enums.order_item.manufacture_status.#{k}"), k]} %>
            </td>
            <td><%= f.submit "更新", class: "btn btn-sm btn-success" %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="col-1"></div>
  <table class="table-borderless col-2">
    <tr>
      <th>商品合計</th>
          <% total = 0 %>
          <% @order_items.each do |order_item| %>
            <% sub_total = order_item.nochange_taxed_price * order_item.amount %>
            <% total += sub_total %>
          <% end %>
      <td><%= number_with_delimiter(total.to_s) + "円" %></td>
    </tr>
    <tr>
      <th>送料</th>
      <td><%= number_with_delimiter(@order.postage.to_s) + "円" %></td>
    </tr>
    <tr>
      <th>請求金額合計</th>
      <td><%= number_with_delimiter(@order.billing_price).to_s + "円" %></td>
    </tr>
  </table>
</div>
