<div class="row">
  <h4>注文履歴一覧</h4>
</div>
<div class="row">
  <table class="table">
    <thead class="table-active">
      <tr>
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
        <th>注文ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><%= order.order_items.create_at.strftime('%Y/%m/%d %H:%M:%S') %></td>
          <td></td>
          <td></td>
          <td></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>