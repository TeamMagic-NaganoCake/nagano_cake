<h4 class="mt-5 mb-5">ショッピングカート</h4>
<% unless @cart_items.empty? %>
  <%= link_to "カートを空にする", cart_items_destroy_all_path, method: :delete, class: "btn btn-danger btn-sm" %>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>商品名</th>
        <th>単価(税込)</th>
        <th>数量</th>
        <th>小計</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @cart_items.each do |cart_item| %>
        <tr>
          <td>
            <%= image_tag cart_item.item.get_image(50, 50) %>
            <%= cart_item.item.item_name %>
          </td>
          <td><%= number_with_delimiter cart_item.item.taxed_price %></td>
          <td>
            <%= form_with model: cart_item do |f| %>
              <%= f.select :amount, *[1..10], selected: cart_item.amount %>
              <%= f.submit "変更", class: "btn btn-success btn-sm" %>
            <% end %>
          </td>
          <td><%= number_with_delimiter cart_item.item_total_price %></td>
          <td><%= link_to "削除する", cart_item_path(cart_item), method: :delete, class: "btn btn-danger btn-sm" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  合計金額
  <%= number_with_delimiter @total %>
  <%= link_to "情報入力に進む", new_order_path, class: "btn btn-success" %>
<% else %>
  ショッピングカートは空です。
<% end %>
<%= link_to "買い物を続ける", items_path, class: "btn btn-primary" %>