<div class="container">
  <div class="col-12 mx-auto">
    <h4 class="d-flex justify-content-left mb-4">ログイン</h4>
    <%= form_with model: @customer, url: customer_session_path, id: 'new_customer', class: 'new_customer', local: true do |f| %>
      <div class="row">
        <div class="col-1"></div>
          <h5 class="text_aligin_left ml-7">会員の方はこちらからログイン</h5>
      </div>
      <div class="field row justify-content-center mb-3">
        <%= f.label :email, "メールアドレス", class: "col-2" %>
        <%= f.email_field :email, autofocus: true, placeholder: "Magic@gmail.com", class: "col-4" %>
      </div>
      <div class="field row justify-content-center">
        <%= f.label :password, "パスワード", class: "col-2" %>
        <%= f.password_field :password, placeholder: "パスワード", class: "col-4" %>
      </div>
      <div class="actions row mb-5 mt-3">
        <div class="col-5"></div>
          <%= f.submit "ログイン", class: "btn btn-md btn-primary" %>
      </div>
    <% end %>
    <div class="row">
      <div class="col-1"></div>
        <h5>会員登録がお済みでない方</h5>
    </div>
    <div class="row">
      <div class="col-2"></div>
        <%= render "public/shared/links" %>
    </div>
  </div>
</div>
