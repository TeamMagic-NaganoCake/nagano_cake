<%= form_with model: shipping_address, local: false do |f| %>
  <div class="field row mb-2">
    <%= f.label :postcode,"郵便番号(ハイフンなし)", class: "col-3" %>
    <%= f.text_field :postcode, class: "col-3 address_form", placeholder: "1234567" %>
  </div>
  <div class="field row mb-2">
    <%= f.label :address,"住所", class: "col-3" %>
    <%= f.text_field :address, class: "col-5 address_form", placeholder: "ホグワーツ" %>
  </div>
  <div class="field row mb-5">
    <%= f.label :address_name,"宛名", class: "col-3" %>
    <%= f.text_field :address_name, class: "col-3 address_form", placeholder: "宛名" %>
    <div class="col-2"></div>
    <div class="actionss col-3 px-0">
      <%= f.submit "新規登録",class: 'btn btn-success btn-md' %>
    </div>
  </div>
<% end %>