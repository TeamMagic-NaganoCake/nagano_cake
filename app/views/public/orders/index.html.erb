<div class="row">
  <div class="col-1"></div>
  <h3 class="d-flex justify-content-left mb-5">注文履歴一覧</h3>
</div>
<table class="tabel table-bordered col-12">
  <thead>
    <tr class="table-active">
      <th>注文日</th>
      <th class="col-5">配送先</th>
      <th>注文商品</th>
      <th class="col-1 px-0 text-center">支払金額</th>
      <th>ステータス</th>
      <th>注文詳細</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
        <td>
          <%= order.order_postcode %><br>
          <%= order.order_address %><br>
          <%= order.order_address_name %><br>
        </td>
        <td>
          <%= order.order_items.each do |order_item| %>
            <%= order_item.item.name %>
          <% end %>
        </td>
        <td><%= order.billing_price.to_s(:delimited)+"円" %></td>
        <td><%= order.order_status %></td>
        <td><%= link_to "表示する", order_path(order), class: "btn btn-md btn-primary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to "表示する(犬塚検証用)", order_path(@orders), class: "btn btn-md btn-primary" %>