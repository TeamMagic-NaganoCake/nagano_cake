<div class="contaoner">
  <div class="row d-flex">
    <div class="col-lg-2">
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <th class="text-center" >ジャンル検索</th>
          </tr>
        </thead>
        <tbody>
          <tr><td>ケーキ</td></tr>
          <tr><td>焼き菓子</td></tr>
          <tr><td>プリン</td></tr>
          <tr><td>キャンディ</td></tr>
        </tbody>
      </table>
    </div>
    <div class="col-lg-8">
      <h2><strong>商品一覧</strong>(全<%= @items.count %>件)</h2>
      <div class="d-flex">
      <% @items.each do |item| %>
        <div class="px-3">
          <%= link_to item_path(item)  do %>
            <%= image_tag item.item_image, size:"250x150" %>
          <% end %><br>
          <%= item.item_name %><br>
          ¥<%= item.taxed_price %>
        </div>
      <% end %>
      </div>
    </div>
    <%= paginate @items %>
  </div>
</div>