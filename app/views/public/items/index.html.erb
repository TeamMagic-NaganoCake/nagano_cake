<div class="contaoner">
  <div class="row d-flex">
    <div class="col-lg-2">
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <th class="text-center" >ジャンル検索</th>
          </tr>
        </thead>
        <tbody>
          <tr><td>ケーキ</td></tr>
          <tr><td>焼き菓子</td></tr>
          <tr><td>プリン</td></tr>
          <tr><td>キャンディ</td></tr>
        </tbody>
      </table>
    </div>
    <div class="col-lg-10">
      <h2><strong>商品一覧</strong>(全<%= @items.count %>件)</h2>
      <div class="d-flex flex-lg-wrap">
      <% @items.each do |item| %>
        <div class="pr-3 pb-5 mt-3">
          <%= link_to item_path(item)  do %>
            <%= image_tag item.item_image, size:"250x150" %>
          <% end %><br>
          <strong><%= item.item_name %></strong><br>
          <strong>¥<%= item.taxed_price %></strong>
        </div>
      <% end %>
      </div>
    </div>
    <%= paginate @items %>
  </div>
</div>