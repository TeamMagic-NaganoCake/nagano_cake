  <div class="row d-flex mt-3">
    <div class="col-lg-2">
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <th class="text-center" >ジャンル検索</th>
          </tr>
        </thead>
        <tbody>
          <%= render "public/items/genre_search", genres: @genres %>
        </tbody>
      </table>
    </div>
    <div class="col-lg-10">
      <h2><strong>商品一覧</strong>(全<%= @items.count %>件)</h2>
      <div class="d-flex flex-lg-wrap">
      <% @items.each do |item| %>
        <div class="pr-3">
          <%= link_to item_path(item)  do %>
            <%= image_tag item.get_image(250, 150) %>
          <% end %>
          <p class="mt-2"><strong><%= item.item_name %></strong></p>
          <p><strong>¥<%= number_with_delimiter item.taxed_price %></p></strong>
        </div>
      <% end %>
      </div>
    </div>
    <%= paginate @items %>
  </div>