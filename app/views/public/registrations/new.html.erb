<div class="row mt-3">
    <h4 class="mb-3">新規会員登録</h4>
  </div>
  <%= form_with model: @customer, url: customer_registration_path, id: 'new_customer', class: 'new_customer', local: true do |f| %>
    <%= render "layouts/errors", obj: resource %>
    <div class="field row mb-3">
      <%= f.label :last_name, "名前", class: "col-2" %>
        <%= f.label :last_name,"(姓)", class: "col-1" %>
        <%= f.text_field :last_name, autofocus: true, class: "col-3", placeholder: "名字" %>
        <%= f.label :first_name,"(名)", class: "col-1" %>
        <%= f.text_field :first_name, class: "col-3", placeholder: "名前" %>
    </div>
    <div class="field row mb-3">
      <%= f.label :last_name_kana,"フリガナ", class: "col-2" %>
        <%= f.label :last_name_kana,"(セイ)", class: "col-1" %>
        <%= f.text_field :last_name_kana, class: "col-3", placeholder: "ミョウジ" %>
        <%= f.label :first_name_kana,"(メイ)", class: "col-1" %>
        <%= f.text_field :first_name_kana, class: "col-3", placeholder: "ナマエ" %>
    </div>
    <div class="field row mb-3">
      <%= f.label :email,"メールアドレス", class: "col-3" %>
      <%= f.text_field :email, class: "col-3", placeholder: "Magic@gmail.com" %>
    </div>
    <div class="field row mb-3">
      <%= f.label :postcode,"郵便番号(ハイフンなし)", class: "col-3" %>
      <%= f.text_field :postcode, class: "col-3", placeholder: "1234567" %>
    </div>
    <div class="field row mb-3">
      <%= f.label :address,"住所", class: "col-3" %>
      <%= f.text_field :address, class: "col-7", placeholder: "ホグワーツ" %>
    </div>
    <div class="field row mb-3">
      <%= f.label :phone_number,"電話番号(ハイフンなし)", class: "col-3" %>
      <%= f.text_field :phone_number, class: "col-3", placeholder: "00011112222" %>
    </div>
    <div class="field row mb-3">
      <%= f.label :password,"パスワード(6文字以上)", class: "col-3" %>
      <%= f.password_field :password, autocomplete: "new-password", class: "col-3" %>
    </div>
    <div class="field row mb-3">
      <%= f.label :password_confirmation,"パスワード(確認用)", class: "col-3" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "col-3" %>
    </div>
    <div class="field row mb-3">
      <div class="col-3"></div>
      <div class="actionss">
        <%= f.submit "　　新規登録　　", class: 'btn btn-success btn-md'%>
      </div>
    </div>
  <% end %>
  <div class="row">
    <div class="col-1"></div>
    <h3 class="d-flex justify-content-left mb-1">既に登録済みの方</h3>
  </div>
  <div class="row">
    <div class="col-1"></div>
    <%= render "public/shared/links" %>
  </div>
</div>


